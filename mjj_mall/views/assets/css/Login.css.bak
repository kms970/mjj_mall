/********************
 * GENERAL STYLES
 ********************/
html {
    text-decoration: none;
  min-height: 100%; }

body {
  background-color: #F3F5F8;
  font-family: 'Noto Sans KR', sans-serif;
  font-size: 15px;
  color: #676a6d; }

.k_logo{
width: 1020px;
height: 50px;
margin: auto;
padding-top: 150px; }

.k_logo_BOT{
    width: 1020px;
    height: 50px;
    margin: auto;
    margin-top: 10px; }

.keplogo{
    margin-left: 3px;
    width: 240px;
    position: relative;
    top: -50px; }


.keplogo_BOT{
    margin-left: 3px;
    width: 260px;
}

.login_box{
    width: 1020px;
    height: 600px;
    display: flex;
    border: 1px solid #a0a0a0;
    border-radius: 10px;
    box-shadow: 0px 0px 5px #8d8d8d;
    margin: auto;
    background-color: #f9f9f9 }

.building{
    position: relative;
    top: 50px;  }


.right_main{
    display: inline-block;
    width: 510px;
    height: auto;
    margin-left: auto;
    margin-top: 60px;
    text-align: center;
    }


input[type=ID],input[type=password]{
    width: 250px;
    height: 45px;
    margin-top: 30px;
    background-color: rgb(238, 238, 238);
    border-radius: 5px;
    border: 0.3px solid rgb(236, 236, 236);
    box-shadow: 0px 0px 3px 1px darkgray;
}
input[type=ID]:focus, input[type=password]:focus {
    background-color: rgb(233, 250, 255);
  }

input[type=ID]::placeholder, input[type=password]::placeholder{
    color: rgba(0, 0, 0, 0.342);

}

.subbox{
    padding:20px 80px;
    background-color:#014099;
    margin-top: 80px;
    border-radius: 5px;
    border: none;
    font-size: 21px;
    color: #f9f9f9;
    box-shadow: 0px 0px 3px 1px darkgray;
}

.subbox:hover{
     background-color:#7fb2fa;
}



@media screen and (max-width: 548px) {


.subbox{

  margin-top: 20px;
  }

input[type=ID],input[type=password]{

    margin-top: 10px;
}
      .login_box{
        width: 310px;
        height: 400px;
        display: flex;
        border: 1px solid #a0a0a0;
        border-radius: 10px;
        box-shadow: 0px 0px 5px #8d8d8d;
        margin: auto;
        background-color: #f9f9f9 }
    
        .building{
            display: none;
        }


        .main_text{
            width: 300px;
        }

        .k_logo{
            width: 100%;
            height: 40px;
            margin: auto;
            padding-top: 150px;
            text-align: center;
         }

         .k_logo_BOT{
            width: 100%;
            margin: auto;
            margin-top: 20px; 
            text-align: center;
        }
        
    

            .keplogo{
                width: 170px;
                margin: auto;
                padding: 0px;
            }

        .keplogo_BOT{
            width: 190px;
            padding: 0px;
        }
		.right_main{

		margin-top: 20px;
		}

}